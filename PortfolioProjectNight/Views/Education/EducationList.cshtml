@model List<PortfolioProjectNight.Models.Education>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Admin/Index.cshtml";
    
}

<h2 class="mb-4">Eğitim Hayatım</h2>


<table class="table table-bordered">
    <tr>
        <th>Eğitim ID</th>
        <th>Başlık</th>
        <th>Okul</th>
        <th>Tarih</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EducationId</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.EducationDate</td>
            <td>@item.Description</td>


            <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
    <a href="/Education/CreateEducation/" class="btn btn-info">Eğitim Ekle</a>




