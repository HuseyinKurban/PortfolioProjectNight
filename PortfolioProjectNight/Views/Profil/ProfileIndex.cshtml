@model PortfolioProjectNight.Models.Profile
@{
    ViewBag.Title = "ProfileIndex";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Profil İşlemleri Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ProfileId)
    <label>Doğum Tarihi</label>
    @Html.TextBoxFor(x => x.Birtdate, new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    <label>Github</label>
    @Html.TextBoxFor(x => x.Github, new { @class = "form-control" })
    <br />
    <label>Adress</label>
    @Html.TextAreaFor(x => x.Adress, 2, 0, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 6, 0, new { @class = "form-control" })
    <br />
    <label>Resim</label>
    @Html.TextAreaFor(x => x.ImageUrl, 2, 0, new { @class = "form-control" })

    <br />
    <button class="btn btn-success">Güncelle</button>
</form>


