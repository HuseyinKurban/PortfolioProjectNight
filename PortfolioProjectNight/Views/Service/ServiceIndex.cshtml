@model List<PortfolioProjectNight.Models.Service>
@{
    ViewBag.Title = "ServiceIndex";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Hizmetler Sayfası Ve İşlemleri</h2>



<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Icon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Icon</td>

            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Service/CreateService" class="btn btn-info">Hizmet Ekle</a>


